<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.louco.shipproject.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <include layout="@layout/stock_block" />
        <include layout="@layout/recommend_block"/>
        <include layout="@layout/dop_block"/>
        <include layout="@layout/sale_block"/>
        <include layout="@layout/new_thing_block"/>
        <include layout="@layout/prise_block"/>
        <include layout="@layout/top_block"/>
        <include layout="@layout/card_price_block"/>
        <include layout="@layout/ready_block"/>
        <include layout="@layout/look_block"/>
        <include layout="@layout/local_block"/>



    </LinearLayout>
</ScrollView>
